<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="226dp"
        android:layout_height="40dp"
        android:text="Name"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="27dp" />

    <TextView
        android:id="@+id/addSessionView"
        android:layout_width="373dp"
        android:layout_height="47dp"
        android:text="Add session"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="139dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addSession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="@android:color/background_dark"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_input_add"
        tools:layout_editor_absoluteX="314dp"
        tools:layout_editor_absoluteY="144dp" />

    <ImageView
        android:id="@+id/customerPicture"
        android:layout_width="79dp"
        android:layout_height="75dp"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageButton
        android:id="@+id/picButton"
        android:layout_width="58dp"
        android:layout_height="39dp"
        android:background="@android:color/background_light"
        app:srcCompat="@drawable/ic_menu_camera"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="96dp" />

    <TextView
        android:id="@+id/billingInfo"
        android:layout_width="226dp"
        android:layout_height="40dp"
        android:text="Card/Paypal"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="82dp" />

    <ScrollView
        android:layout_width="377dp"
        android:layout_height="240dp"
        android:layout_weight="1"
        android:scrollbars="none"
        tools:layout_editor_absoluteX="6dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/addSessionView">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/tableLayout1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:id="@+id/textView1"
                    android:paddingLeft="10dip"
                    android:paddingRight="30dip"
                    android:text="Session"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Button
                    android:id="@+id/button1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip"
                    android:text="Receipt" />

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Session\nComplete?"
                    android:textAlignment="center"
                    android:textSize="14sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:id="@+id/textView2"
                    android:paddingLeft="10dip"
                    android:paddingRight="30dip"
                    android:text="Session"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Button
                    android:id="@+id/button2"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip"
                    android:text="Receipt" />

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Session\nComplete?"
                    android:textAlignment="center" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:id="@+id/textView3"
                    android:paddingLeft="10dip"
                    android:paddingRight="30dip"
                    android:text="Session"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Button
                    android:id="@+id/button3"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip"
                    android:text="Receipt" />

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Session\nComplete?"
                    android:textAlignment="center" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dip">

                <TextView
                    android:id="@+id/textView4"
                    android:paddingLeft="10dip"
                    android:paddingRight="30dip"
                    android:text="Session"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Button
                    android:id="@+id/button4"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip"
                    android:text="Receipt" />

                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Session\nComplete?"
                    android:textAlignment="center" />
            </TableRow>

        </TableLayout>
    </ScrollView>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="101dp"
        android:layout_height="49dp"
        android:text="Save"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="446dp" />


</android.support.constraint.ConstraintLayout>